<h2>
  {{ section.settings.title }}
</h2>

{% for block in section.blocks %}
  {% case block.type %}
    {% when "welcome" %}
    <h3 {{ block.shopify_attributes }}>
      {{ block.settings.heading }}
    </h3>
    {% when 'slide' %}
    <div class="slide" {{ block.shopify_attributes }}>
      {{ block.settings.image | image_url: width: 2048 | image_tag }}
    </div>
  {% endcase %}
{% endfor %}

{% schema %}
  {
    "name": "Header",
    "tag": "header",
    "class": "header",
    "limit": 1,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Titlte",
        "default": "Welcome to our title"
      }
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "welcome",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "default": "Welcome to our store",
            "label": "Heading"
          }
        ]
      }, {
        "name": "Slide",
        "type": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}