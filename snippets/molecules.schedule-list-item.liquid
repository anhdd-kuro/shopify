{% comment %}
  {
    /**
    * 追加クラス
    */
    class: string
    /**
    * リンク
    */
    href: string
    /**
    *  開始時間
    */
    start_time: string
    /**
    *  終了時間
    */
    end_time: string
    /**
    * チケットステータス
    */
    status: 0 | 1 | 2
  }
{% endcomment %}

<div class="{{ class }}">
  {% render 'atoms.time-schedule', start: start_time, end: end_time %}
  {% capture button_slot_ %}
    {% case status %}
        {% when '1' %}
        △
        {% when '2' %}
        ⚪︎
        {% else %}
        ◎
    {% endcase %}
    販売中
  {% endcapture %}
  {% render 'atoms.button-contained', href: href, slot: button_slot_ %}
</div>
